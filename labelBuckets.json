{
  "bucketRules": {
    "units": "cm for dimensions, pt for fonts",
    "inputs": { "W_cm": "breedte labelvlak", "H_cm": "hoogte labelvlak" },
    "computed": {
      "r": "W_cm / H_cm",
      "q": "H_cm / W_cm",
      "D_long_cm": "max(W_cm, H_cm)"
    },
    "familySelection": {
      "squareTolerance": { "eps": 0.1, "squareIf": "0.90 <= r <= 1.10" },
      "portraitIf": "r < 0.90",
      "landscapeIf": "r > 1.10"
    },
    "variantSelection": {
      "portrait": {
        "basis": "r=W/H",
        "narrowIf": "r < 0.40",
        "standardIf": "0.40 <= r < 0.65",
        "wideIf": "0.65 <= r < 0.90"
      },
      "landscape": {
        "basis": "q=H/W",
        "shortIf": "q < 0.40",
        "standardIf": "0.40 <= q < 0.65",
        "highIf": "0.65 <= q < 0.90"
      },
      "square": { "variant": "none" }
    },
    "sizeClassSelection": {
      "basis": "D_long_cm=max(W_cm,H_cm)",
      "micro": "5.0 <= D_long_cm < 10.0",
      "small": "10.0 <= D_long_cm < 25.0",
      "medium": "25.0 <= D_long_cm < 40.0",
      "large": "40.0 <= D_long_cm < 70.0",
      "extraLarge": "70.0 <= D_long_cm <= 100.0",
      "refMidpointsCm": {
        "MICRO": 7.5,
        "SMALL": 17.5,
        "MEDIUM": 32.5,
        "LARGE": 55.0,
        "EXTRA_LARGE": 85.0
      }
    },
    "typographyRules": {
      "boldFlags": {
        "erp_text": true,
        "product_description": false,
        "content_label": true,
        "content_text": false,
        "footer": false
      }
    }
  },

